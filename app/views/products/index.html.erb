<div class="frontpage">
  <%= paginate @products %>

  <table class="pretty">
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "description" %></th>
      <th><%= sortable 'price' %></th>
    </tr>

    <% @products.each do |jerky| %>
    <tr>
      <td><%= sortable link_to jerky.name, product_path(jerky) %><br></td>
      <td><%= sortable jerky.description %><br></td>
      <td class="price"><%= sortable jerky.price %><br></td>
    </tr>
    <% end %>
  </table>
  <br>

  <p><%= link_to"new product", new_product_path %></p>

</div>
